# ========================================
# Django Settings
# ========================================
DEBUG=True
DJANGO_ENV=development
SECRET_KEY=your-django-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# ========================================
# CORS Settings
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# ========================================
# Security Settings (Production Only)
# ========================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000

# ========================================
# Database (PostgreSQL con Docker)
# ========================================
POSTGRES_DB=talkabout_db
POSTGRES_USER=talkabout_user
POSTGRES_PASSWORD=your-db-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ========================================
# Redis (para Celery y Channels)
# ========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ========================================
# Celery (tareas asíncronas)
# ========================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ========================================
# Email Configuration
# ========================================
# Para DESARROLLO: usa console backend (emails en consola)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para PRODUCCIÓN: descomenta y configura con tu SMTP
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.upv.es
EMAIL_PORT=465
EMAIL_USE_TLS=False
EMAIL_USE_SSL=True
EMAIL_HOST_USER=s-emoocs@upv.es
EMAIL_HOST_PASSWORD=your-smtp-password-here
EMAIL_DISPLAY_NAME="Youtube UPV"
EMAIL_DISPLAY_ADDRESS=youtube@upv.es
EMAIL_THROTTLE_DELAY=0.2

# ========================================
# Frontend URL (para links en emails)
# ========================================
FRONTEND_URL=http://localhost:3000

